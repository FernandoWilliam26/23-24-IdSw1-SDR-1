@startuml

title Diagrama de Clases - Aplicación FISC

class Usuario {
    - nombre
    - id
}

class Proyecto {
    - nombre
}

class Simulación {
    - tipologíaElemento
    - material
    - localización
    - agresiónTérmica
    - gráficaReacción
    - fechaSimulación
}

class Log {
    - acciones
    - fechaHora
    - detalles
}

class Reporte {
    - resultados
    - formato
    - gráficas
}

Usuario -- Proyecto : "realiza"
Proyecto  -- Simulación : "contiene"
Simulación -- Reporte : "produce"
Usuario -- Log : "registra"
Proyecto -- Log : "registra"

@enduml