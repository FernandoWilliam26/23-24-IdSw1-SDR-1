actor Administrador
actor Cliente
actor "Jefe de Proyecto" as JefeProyecto
actor "Desarrollador de Software" as Desarrollador

rectangle "Filtrado de Tickets" {
  (FiltrarPalabra)
  (FiltrarEstado)
  (FiltrarPrioridad)
  (FiltrarFecha)
  (FiltrarCreador)
  (FiltrarProyecto)
}

rectangle "Estados" {
  (Pendiente)
  (EnProceso)
  (EnEspera)
  (Resuelto)
  (Cerrado)
}

rectangle "Prioridades" {
  (Baja)
  (Media)
  (Alta)
  (Critica)
}

